{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=SaaSPlatformDb;User ID=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "SaaSPlatform",
    "Audience": "SaaSPlatformClients",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5342"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SaaSPlatform.Api"
    }
  },
  "Azure": {
    "SubscriptionId": "",
    "Location": "eastus",
    "UseSimulation": true
  },
  "SendGrid": {
    "ApiKey": "",
    "FromEmail": "noreply@saasplatform.com",
    "FromName": "SaaS Platform",
    "UseSimulation": true
  },
  "Hangfire": {
    "DashboardPath": "/hangfire"
  },
  "AllowedHosts": "*"
}
