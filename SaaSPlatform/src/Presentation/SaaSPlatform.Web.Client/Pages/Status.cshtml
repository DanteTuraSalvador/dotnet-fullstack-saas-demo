@page
@model SaaSPlatform.Web.Client.Pages.StatusModel
@{
    ViewData["Title"] = "Subscription Status";
}

<div class="container">
    <h1 class="mt-4">Subscription Request Status</h1>
    <p class="lead">Check the status of your Azure SaaS subscription requests.</p>
    
    <form method="get" class="mt-4">
        <div class="form-group">
            <label for="email">Enter your email address:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email to search for requests">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>
    
    @if (Model.SubscriptionRequests != null && Model.SubscriptionRequests.Any())
    {
        <div class="mt-4">
            <h3>Your Subscription Requests</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>Contact Person</th>
                        <th>Business Type</th>
                        <th>Submitted Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.SubscriptionRequests)
                    {
                        <tr>
                            <td>@request.CompanyName</td>
                            <td>@request.ContactPerson</td>
                            <td>@request.BusinessType</td>
                            <td>@request.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                @if (request.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (request.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (request.Status == "Deployed")
                                {
                                    <span class="badge bg-info">Deployed</span>
                                }
                                else if (request.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.SearchPerformed)
    {
        <div class="alert alert-info mt-4" role="alert">
            <p>No subscription requests found for the provided email address.</p>
        </div>
    }
</div>