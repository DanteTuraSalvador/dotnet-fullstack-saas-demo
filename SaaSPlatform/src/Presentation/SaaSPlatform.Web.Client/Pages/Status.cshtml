@page
@model SaaSPlatform.Web.Client.Pages.StatusModel
@{
    ViewData["Title"] = "Subscription Status";
}

<div class="mx-auto max-w-4xl space-y-6">
    <div class="space-y-2 text-center">
        <p class="text-sm font-semibold uppercase tracking-wide text-primary">Track requests</p>
        <h1 class="section-heading">Subscription Request Status</h1>
        <p class="section-subheading">Enter the email address used in your subscription request.</p>
    </div>

    <form method="get" class="surface-card grid gap-4 md:grid-cols-3">
        <div class="md:col-span-2">
            <label asp-for="Email" class="block text-sm font-semibold text-slate-600"></label>
            <input asp-for="Email" class="mt-1 block w-full rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-slate-900 shadow-sm transition focus:border-primary focus:ring-2 focus:ring-primary/40" placeholder="admin@contoso.com" />
            <span asp-validation-for="Email" class="mt-2 block text-sm text-rose-600"></span>
        </div>
        <div class="md:self-end">
            <button type="submit" class="h-full w-full rounded-2xl bg-primary px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary/30 transition">
                Search
            </button>
        </div>
    </form>

    @if (Model.SubscriptionRequests != null && Model.SubscriptionRequests.Any())
    {
        <div class="overflow-hidden rounded-2xl border border-slate-100 bg-white shadow-xl shadow-slate-900/5">
            <table class="min-w-full divide-y divide-slate-100 text-sm">
                <thead class="bg-slate-50 text-left font-semibold text-slate-600">
                    <tr>
                        <th class="px-6 py-3">Company</th>
                        <th class="px-6 py-3">Contact Person</th>
                        <th class="px-6 py-3">Business Type</th>
                        <th class="px-6 py-3">Submitted Date</th>
                        <th class="px-6 py-3">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                    @foreach (var request in Model.SubscriptionRequests)
                    {
                        <tr class="text-slate-700">
                            <td class="px-6 py-4 font-semibold text-slate-900">@request.CompanyName</td>
                            <td class="px-6 py-4">@request.ContactPerson</td>
                            <td class="px-6 py-4">@request.BusinessType</td>
                            <td class="px-6 py-4">@request.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td class="px-6 py-4">
                                <span class="@StatusModel.GetBadgeClass(request.Status)">@request.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.SearchPerformed)
    {
        <div class="rounded-2xl border border-slate-200 bg-white/80 p-4 text-slate-600">
            No subscription requests found for the provided email address.
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
