@page
@model SaaSPlatform.Web.Client.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Subscription Confirmation";
}

<div class="mx-auto max-w-3xl space-y-6">
    <div class="rounded-2xl border border-emerald-200 bg-emerald-50/80 p-6 text-emerald-900 shadow-inner">
        <p class="text-xs font-semibold uppercase tracking-[0.25em] text-emerald-600">Submission received</p>
        <h1 class="mt-2 text-3xl font-semibold text-emerald-900">Thank you!</h1>
        <p class="mt-3 text-emerald-800">
            Your Azure SaaS subscription request has been successfully submitted. An administrator will review your request and contact you shortly.
        </p>
    </div>

    @if (Model.SubscriptionRequest is not null)
    {
        <div class="surface-card space-y-6">
            <div>
                <p class="text-sm font-semibold uppercase tracking-wide text-primary">Request details</p>
                <h2 class="text-2xl font-semibold text-slate-900">Submission summary</h2>
            </div>
            <dl class="grid gap-4 sm:grid-cols-2">
                <div class="rounded-2xl bg-slate-50/80 p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Company Name</dt>
                    <dd class="mt-2 text-base font-semibold text-slate-900">@Model.SubscriptionRequest.CompanyName</dd>
                </div>
                <div class="rounded-2xl bg-slate-50/80 p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Contact Email</dt>
                    <dd class="mt-2 text-base font-semibold text-slate-900">@Model.SubscriptionRequest.ContactEmail</dd>
                </div>
                <div class="rounded-2xl bg-slate-50/80 p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Contact Person</dt>
                    <dd class="mt-2 text-base font-semibold text-slate-900">@Model.SubscriptionRequest.ContactPerson</dd>
                </div>
                <div class="rounded-2xl bg-slate-50/80 p-4">
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Business Type</dt>
                    <dd class="mt-2 text-base font-semibold text-slate-900">@Model.SubscriptionRequest.BusinessType</dd>
                </div>
                <div class="rounded-2xl bg-slate-50/80 p-4 sm:col-span-2">
                    <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500">Status</dt>
                    <dd class="mt-3">
                        <span class="@ConfirmationModel.GetBadgeClass(Model.SubscriptionRequest.Status)">
                            @Model.SubscriptionRequest.Status
                        </span>
                    </dd>
                </div>
            </dl>
        </div>
    }
    else
    {
        <div class="rounded-2xl border border-slate-200 bg-white/80 p-5 text-slate-700">
            We could not load the request details. Please submit a new request to view the summary again.
        </div>
    }

    <div class="flex flex-wrap gap-3">
        <a asp-page="/Index" class="inline-flex items-center justify-center rounded-2xl bg-primary px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary/30 transition hover:-translate-y-0.5">
            Submit Another Request
        </a>
        <a asp-page="/Status" class="inline-flex items-center justify-center rounded-2xl border border-slate-200 px-5 py-3 text-sm font-semibold text-slate-600 transition hover:border-primary hover:text-primary">
            Check Request Status
        </a>
    </div>
</div>
