@page
@model IndexModel
@{
    ViewData["Title"] = "Client Subscription";
}

<div class="mx-auto max-w-3xl space-y-6">
    <div class="space-y-2 text-center">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-primary">Azure SaaS</p>
        <h1 class="section-heading">Subscription Request</h1>
        <p class="section-subheading">
            Fill out this form to request Azure infrastructure provisioning for your organization.
        </p>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-sm text-rose-600"></div>

    <form method="post" class="surface-card space-y-5">
        <div>
            <label asp-for="CompanyName" class="block text-sm font-semibold text-slate-600"></label>
            <input asp-for="CompanyName" class="mt-1 block w-full rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-slate-900 shadow-sm transition focus:border-primary focus:ring-2 focus:ring-primary/40" />
            <span asp-validation-for="CompanyName" class="mt-2 block text-sm text-rose-600"></span>
        </div>

        <div>
            <label asp-for="ContactEmail" class="block text-sm font-semibold text-slate-600"></label>
            <input asp-for="ContactEmail" class="mt-1 block w-full rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-slate-900 shadow-sm transition focus:border-primary focus:ring-2 focus:ring-primary/40" />
            <span asp-validation-for="ContactEmail" class="mt-2 block text-sm text-rose-600"></span>
        </div>

        <div>
            <label asp-for="ContactPerson" class="block text-sm font-semibold text-slate-600"></label>
            <input asp-for="ContactPerson" class="mt-1 block w-full rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-slate-900 shadow-sm transition focus:border-primary focus:ring-2 focus:ring-primary/40" />
            <span asp-validation-for="ContactPerson" class="mt-2 block text-sm text-rose-600"></span>
        </div>

        <div>
            <label asp-for="BusinessType" class="block text-sm font-semibold text-slate-600"></label>
            <select asp-for="BusinessType" class="mt-1 block w-full rounded-2xl border border-slate-200 bg-white/70 px-4 py-3 text-slate-900 shadow-sm transition focus:border-primary focus:ring-2 focus:ring-primary/40">
                <option value="">Select Business Type</option>
                <option>Technology</option>
                <option>Finance</option>
                <option>Healthcare</option>
                <option>Education</option>
                <option>Retail</option>
                <option>Manufacturing</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="BusinessType" class="mt-2 block text-sm text-rose-600"></span>
        </div>

        <div class="flex flex-wrap items-center gap-3">
            <button type="submit" class="inline-flex items-center justify-center rounded-2xl bg-primary px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-primary/30 transition">
                Submit Subscription Request
            </button>
            <a asp-page="/Status" class="rounded-2xl border border-slate-200 px-5 py-3 text-sm font-semibold text-slate-600 transition hover:border-primary hover:text-primary">
                Check Request Status
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
