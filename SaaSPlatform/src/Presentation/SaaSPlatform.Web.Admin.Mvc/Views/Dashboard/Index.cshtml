@model SaaSPlatform.Web.Admin.Mvc.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

@functions {
    string GetBadge(string? status)
    {
        const string baseClass = "inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold ring-1 ring-inset";
        return status switch
        {
            "Pending" => $"{baseClass} bg-amber-50 text-amber-700 ring-amber-200",
            "Approved" => $"{baseClass} bg-emerald-50 text-emerald-700 ring-emerald-200",
            "Deployed" => $"{baseClass} bg-sky-50 text-sky-700 ring-sky-200",
            "Rejected" => $"{baseClass} bg-rose-50 text-rose-700 ring-rose-200",
            _ => $"{baseClass} bg-slate-100 text-slate-600 ring-slate-200"
        };
    }
}

<div class="space-y-8">
    <div class="space-y-2 text-center md:text-left">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-primary">Azure SaaS</p>
        <h1 class="section-heading">Administration Dashboard</h1>
        <p class="section-subheading">Manage client subscription requests and Azure deployments.</p>
    </div>

    <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-4">
        <div class="surface-card border-l-4 border-primary/60">
            <p class="text-xs font-semibold uppercase tracking-wide text-primary">Pending Requests</p>
            <p class="mt-3 text-3xl font-semibold text-slate-900">@Model.PendingCount</p>
            <p class="text-sm text-slate-500">Awaiting review</p>
        </div>
        <div class="surface-card border-l-4 border-emerald-500/70">
            <p class="text-xs font-semibold uppercase tracking-wide text-emerald-600">Approved Requests</p>
            <p class="mt-3 text-3xl font-semibold text-slate-900">@Model.ApprovedCount</p>
            <p class="text-sm text-slate-500">Ready for deployment</p>
        </div>
        <div class="surface-card border-l-4 border-sky-500/70">
            <p class="text-xs font-semibold uppercase tracking-wide text-sky-600">Deployed Services</p>
            <p class="mt-3 text-3xl font-semibold text-slate-900">@Model.DeployedCount</p>
            <p class="text-sm text-slate-500">Active Azure workloads</p>
        </div>
        <div class="surface-card border-l-4 border-rose-500/70">
            <p class="text-xs font-semibold uppercase tracking-wide text-rose-600">Rejected Requests</p>
            <p class="mt-3 text-3xl font-semibold text-slate-900">@Model.RejectedCount</p>
            <p class="text-sm text-slate-500">Need follow-up</p>
        </div>
    </div>

    <div class="space-y-4">
        <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-primary">Recent activity</p>
            <h2 class="text-2xl font-semibold text-slate-900">Latest Subscription Requests</h2>
        </div>

        <div class="overflow-hidden rounded-2xl border border-slate-100 bg-white shadow-xl shadow-slate-900/5">
            <table class="min-w-full divide-y divide-slate-100 text-sm">
                <thead class="bg-slate-50 text-left font-semibold text-slate-600">
                    <tr>
                        <th class="px-6 py-3">Company</th>
                        <th class="px-6 py-3">Contact</th>
                        <th class="px-6 py-3">Business Type</th>
                        <th class="px-6 py-3">Submitted</th>
                        <th class="px-6 py-3">Status</th>
                        <th class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                    @foreach (var subscription in Model.RecentSubscriptions)
                    {
                        <tr class="text-slate-700">
                            <td class="px-6 py-4 font-semibold text-slate-900">@subscription.CompanyName</td>
                            <td class="px-6 py-4">@subscription.ContactEmail</td>
                            <td class="px-6 py-4">@subscription.BusinessType</td>
                            <td class="px-6 py-4">@subscription.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4">
                                <span class="@GetBadge(subscription.Status)">@subscription.Status</span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <a asp-controller="Subscriptions" asp-action="Index" class="inline-flex items-center rounded-xl border border-slate-200 px-3 py-2 text-xs font-semibold text-slate-600 transition hover:border-primary hover:text-primary">
                                    Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
