<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaaSPlatform.Web.Admin</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaaSPlatform.Web.Admin.styles.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#2563eb',
                            foreground: '#ffffff'
                        },
                        slate: {
                            950: '#020617'
                        }
                    },
                    fontFamily: {
                        sans: ["'Segoe UI'", 'Inter', 'system-ui', 'sans-serif']
                    }
                }
            }
        };
    </script>
</head>
<body class="bg-slate-50 font-sans text-slate-900 antialiased">
    <div class="min-h-screen">
        <header class="border-b border-slate-100 bg-white/90 backdrop-blur">
            <div class="page-shell flex h-16 items-center justify-between">
                <a class="text-lg font-semibold text-slate-900" asp-area="" asp-page="/Index">SaaSPlatform Admin</a>
                <nav class="flex items-center gap-4 text-sm font-medium">
                    <a class="text-slate-500 transition hover:text-primary" asp-area="" asp-page="/Index">Dashboard</a>
                    <a class="text-slate-500 transition hover:text-primary" asp-area="" asp-page="/Subscriptions">Subscriptions</a>
                    <a class="text-slate-500 transition hover:text-primary" asp-area="" asp-page="/Deployments">Deployments</a>
                    <a class="text-slate-500 transition hover:text-primary" asp-area="" asp-page="/Privacy">Privacy</a>
                </nav>
            </div>
        </header>

        <main role="main" class="page-shell py-10 min-h-[60vh]">
            @RenderBody()
        </main>

        <footer class="border-t border-slate-100 bg-white/70 py-6 text-sm text-slate-500">
            <div class="page-shell flex flex-wrap items-center justify-between gap-2">
                <span>&copy; @DateTime.Now.Year SaaSPlatform</span>
                <a class="font-medium text-slate-600 hover:text-primary" asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
