@page "/confirmation"

<PageTitle>Submission Confirmation</PageTitle>

@inject SubmissionSummaryState SummaryState
@inject NavigationManager NavigationManager

<div class="row justify-content-center">
    <div class="col-xl-7">
        <div class="alert alert-success shadow-sm" role="alert">
            <h2 class="alert-heading">Thank you!</h2>
            <p>Your Azure SaaS subscription request has been successfully submitted.</p>
            <p class="mb-0">An administrator will review your request and contact you shortly.</p>
        </div>

        @if (SummaryState.LatestSummary is not null)
        {
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Request Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Company Name:</strong> @SummaryState.LatestSummary.CompanyName</p>
                    <p><strong>Contact Email:</strong> @SummaryState.LatestSummary.ContactEmail</p>
                    <p><strong>Contact Person:</strong> @SummaryState.LatestSummary.ContactPerson</p>
                    <p><strong>Business Type:</strong> @SummaryState.LatestSummary.BusinessType</p>
                    <p>
                        <strong>Status:</strong>
                        <span class="badge bg-warning text-dark">@SummaryState.LatestSummary.Status</span>
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                We could not load the request details. Please submit a new request to view the summary again.
            </div>
        }

        <div class="d-flex gap-3 mt-4 flex-wrap">
            <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo(string.Empty, true)'>
                Submit Another Request
            </button>
            <button class="btn btn-outline-secondary" @onclick='() => NavigationManager.NavigateTo("/status", true)'>
                Check Request Status
            </button>
        </div>
    </div>
</div>
