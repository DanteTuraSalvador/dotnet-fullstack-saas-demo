@inherits LayoutComponentBase

<div class="min-h-screen bg-slate-50 text-slate-900">
    <header class="border-b border-slate-100 bg-white/90 backdrop-blur">
        <div class="page-shell flex h-16 items-center justify-between">
            <a class="text-lg font-semibold text-slate-900" href="">SaaSPlatform Blazor</a>
            <nav class="flex items-center gap-4 text-sm font-medium">
                <NavLink class="text-slate-500 transition hover:text-primary" ActiveClass="text-primary font-semibold" href="" Match="NavLinkMatch.All">
                    Request Subscription
                </NavLink>
                <NavLink class="text-slate-500 transition hover:text-primary" ActiveClass="text-primary font-semibold" href="status">
                    Check Status
                </NavLink>
            </nav>
        </div>
    </header>

    <main class="page-shell py-10">
        <div class="min-h-[60vh]">
            @Body
        </div>
    </main>

    <footer class="border-t border-slate-100 bg-white/70 py-6 text-sm text-slate-500">
        <div class="page-shell flex flex-wrap items-center justify-between gap-2">
            <span>&copy; @DateTime.Now.Year SaaSPlatform</span>
            <span class="font-medium text-slate-600">Blazor Client</span>
        </div>
    </footer>
</div>
